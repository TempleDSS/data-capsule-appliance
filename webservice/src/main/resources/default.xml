<?xml version="1.0"?>
<configuration>
	<!-- classes that serve as resources, separated by semicolon -->
    <property>
      	<name>sloan.ws.resources.names</name>
		<value>edu.indiana.d2i.sloan.ListVMs;edu.indiana.d2i.sloan.GroupOperation;edu.indiana.d2i.sloan.CreateVM;edu.indiana.d2i.sloan.QueryVM;edu.indiana.d2i.sloan.LaunchVM;edu.indiana.d2i.sloan.DeleteVM;edu.indiana.d2i.sloan.StopVM;edu.indiana.d2i.sloan.SwitchVM;edu.indiana.d2i.sloan.ListImage;edu.indiana.d2i.sloan.DownloadResult;edu.indiana.d2i.sloan.UploadResult;edu.indiana.d2i.sloan.ShowReleased;edu.indiana.d2i.sloan.ShowUnreleased;edu.indiana.d2i.sloan.doReleaseResult;edu.indiana.d2i.sloan.ShowReviewData</value>
    </property>	

	<!-- hypervisor -->
    <property>
      	<name>sloan.ws.hyper.workers</name>
		<value>1024</value>
    </property>
    <property>
      	<name>hypervisor.task.timeout.in.ms</name>
		<value>30000</value>
    </property>  
    <property>
      	<name>retry.task.wait.in.millis</name>
		<value>3000</value>
    </property>  
    <property>
      	<name>retry.task.max.attempt</name>
		<value>3</value>
    </property>  
    <property>
      	<name>use.retry.task</name>
		<value>true</value>
    </property>  
    <property>
      	<name>hypervisor.full.class.name</name>
		<value>edu.indiana.d2i.sloan.hyper.AlwaysSuccessHypervisor</value>
    </property> 
    
    <!-- scheduler -->
    <property>
		<name>scheduler.impl.class</name>
		<value>edu.indiana.d2i.sloan.scheduler.RoundRobinScheduler</value>
    </property>
    <property>
		<name>scheduler.max.num.attempts</name>
		<value>5</value>
    </property>    
    
    <!-- log4j property file -->
    <property>
		<name>log4j.properties.path</name>
		<value>/opt/tomcat/apache-tomcat-8.5.11/webapps/sloan-ws-1.1/WEB-INF/classes/log4j.properties</value>
    </property>     
    
</configuration>