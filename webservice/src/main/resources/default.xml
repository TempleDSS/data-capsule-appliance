<?xml version="1.0"?>
<configuration>
	<!-- classes that serve as resources, separated by semicolon -->
    <property>
      	<name>sloan.ws.resources.names</name>
		<value>edu.indiana.d2i.sloan.CreateVM;edu.indiana.d2i.sloan.QueryVM;edu.indiana.d2i.sloan.LaunchVM;edu.indiana.d2i.sloan.DeleteVM;edu.indiana.d2i.sloan.StopVM;edu.indiana.d2i.sloan.SwitchVM;edu.indiana.d2i.sloan.ListImage;edu.indiana.d2i.sloan.DownloadResult;edu.indiana.d2i.sloan.UploadResult</value>
    </property>	

	<!-- hypervisor -->
    <property>
      	<name>sloan.ws.hyper.workers</name>
		<value>1024</value>
    </property>
    <property>
      	<name>hypervisor.task.timeout.in.ms</name>
		<value>30000</value>
    </property>  
    <property>
      	<name>retry.task.wait.in.millis</name>
		<value>3000</value>
    </property>  
    <property>
      	<name>retry.task.max.attempt</name>
		<value>3</value>
    </property>  
    <property>
      	<name>use.retry.task</name>
		<value>true</value>
    </property>  
    <property>
      	<name>hypervisor.full.class.name</name>
		<value>edu.indiana.d2i.sloan.hyper.AlwaysSuccessHypervisor</value>
    </property> 
    
    <!-- hypervisor scripts -->
    <property>
      	<name>resp.kv.delimiter</name>
		<value>\t</value>
    </property> 
    <property>
      	<name>resp.vm.status.key</name>
		<value>status</value>
    </property> 
    <property>
      	<name>cmd.create.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/create_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.launch.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/launch_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.query.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/query_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.switch.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/switch_vm_script.sh </value>
    </property> 
    <property>
      	<name>cmd.stop.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/stop_vm_script.sh</value>
    </property> 
    <property>
      	<name>cmd.delete.vm</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/delete_vm_script.sh</value>
    </property> 
    
    <!-- fire wall policy -->
    <property>
      	<name>hypervisor.fw.maintenance</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/maintenance.fw</value>
    </property> 
    <property>
      	<name>hypervisor.fw.secure</name>
		<value>/u/hathitrust/htrc-sloan/script-simulator/secure.fw</value>
    </property> 
    
    <!-- email setting -->
    <property>
      	<name>email.sendername</name>
		<value>XX</value>
    </property> 
    <property>
      	<name>email.password</name>
		<value>XX</value>
    </property> 
    <property>
      	<name>email.smtp.host</name>
		<value>smtp.gmail.com</value>
    </property> 
    <property>
      	<name>email.smtp.port</name>
		<value>587</value>
    </property> 
    
    <!-- result download url prefix -->
    <property>
      	<name>result.download.prefix</name>
		<value>https://thatchpalm.pti.indiana.edu:8080/sloan-ws-1.1-SNAPSHOT/download?randomid=</value>
    </property>     
    <property>
    	<!-- -1 means never expire -->
		<name>result.expire.sec</name>
		<value>43200</value>
    </property>
    
    <!-- volume size, user quota -->
    <property>
		<name>sloan.ws.volume.size.gb</name>
		<value>10</value>
    </property>
    <property>
		<name>user.disk.quota.in.gb</name>
		<value>100</value>
    </property>
    <property>
		<name>user.cpu.quota.in.num</name>
		<value>20</value>
    </property>
    <property>
		<name>user.memory.quota.in.mb</name>
		<value>20480</value>
    </property>
    
    <!-- scheduler -->
    <property>
		<name>scheduler.impl.class</name>
		<value>edu.indiana.d2i.sloan.scheduler.RoundRobinScheduler</value>
    </property>
    <property>
		<name>scheduler.max.num.attempts</name>
		<value>5</value>
    </property>    
    
    <!-- log4j property file -->
    <property>
		<name>log4j.properties.path</name>
		<value>XXX</value>
    </property>     
    
</configuration>